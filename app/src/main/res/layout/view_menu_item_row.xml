<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_menu_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp">

        <!--            android:src="@drawable/dissert_img" />-->
        <ImageView
            android:id="@+id/image_view_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/dissert_img" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_title_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/card_view_menu_image"
        android:layout_marginBottom="32px"
        android:layout_toRightOf="@id/card_view_menu_image"
        android:fontFamily="monospace"
        tools:text="Dissert Title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_description_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_title_menu"
        android:layout_marginBottom="32px"
        android:layout_toRightOf="@id/card_view_menu_image"
        android:fontFamily="monospace"
        tools:text="Suspendisse ultrices at diam lectus nullam. Enim massa turpis."
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_price_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_description_menu"
        android:layout_toRightOf="@id/card_view_menu_image"
        android:fontFamily="monospace"
        tools:text="R$ 15,99"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_below="@id/card_view_menu_image"
        android:layout_centerHorizontal="true"
        android:alpha="0.55"
        android:background="#9C69E2"
        android:paddingBottom="8dp" />


</RelativeLayout>